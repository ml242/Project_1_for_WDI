<div class="unit half">
	<div class="new-ascend-form">
		<% if @current_user %>
		<h1><%= @ascend.name %></h1>

		<%= form_for(@ascend) do |f| %>

		<%= f.label :name %><br>
		<%= f.text_field :name %>
		<br><%= f.label :face_location %><br>
		<%= f.text_field :face_location %>
		<br><%= f.label :is_dangerous, "Is the climb dangerous"%>
		<%= f.check_box :is_dangerous %>
		<br><%= f.label :grade %><br>
		<%= f.text_field :grade %>
		<br><%= f.label :comments %><br>
		<%= f.text_field :comments %>
		<br><%= f.label :base_image, "Upload a Different Image"%><br>
		<input type="file" capture="camera" accept="image/*" id="takePictureField"> 
		<br><br><%= f.submit %><br>
		<% end %>

		<% else %>

		<h2>Login or Create an Account to add a Route.</h2>
		<% flash.each do |name, msg| %>
		<%= content_tag :div, msg, class: name %>
		<% end %>

		<%= form_tag('/login') do %>
		<br><%= label_tag :email %>
		<%= text_field_tag :email %>
		<br><%= label_tag :password %>
		<%= password_field_tag :password %>
		<br><br><%= submit_tag "Login" %>
		<% end %>

		<br>
		<%= link_to "Create an Account", new_user_path %>



		<% end %>
	</div>
</div>




<div class="picture-frame unit half saveable">

	<canvas id="myCanvas" class="new-ascend-form">
		<div class="new-picture-upload">

      <%= image_tag @ascend.base_image.url(:medium), :id => "last-upload" %>

 		</div>
	</canvas>





	<div id="shutter-click">

		<p>Draw your route and then click <span class="save-image">Save to upload</span>.</p>

	</div>





</div>