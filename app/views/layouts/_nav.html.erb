<header role="banner">
  <nav>
    <div class="container grid">
      <div class="unit three-fifths">
        <h1>Welcome to the Grand Send Station</h1>
        <p>The temperature is: <%= @weather.current_temp %> degrees, F. <% if @weather.current_temp.to_i > 35 && Time.now.hour > 5 && Time.now.hour < 21 %> <%= "Perfect for climbing in Central Park!" %> <% else %> <%= "Tomorrow is going to be a great day to climb!" %> </p><% end %>
      </div>

        <div class="user_edit">
          <p>
          <% if session[:user_id] %>
          <%= render 'layouts/logged' %>
          <% end %> |
          <%= link_to 'Crags', '/crags' %> | <%= link_to 'Main', '/users' %> |
          <% if session[:user_id] %>
          <%= link_to 'Logout', "/logout" %>
          <% end %>
        </p>
        </div>
      <!--
        <ul>
          <li>Home</li>
          <li>Contact</li>
          <li>Profile</li>
        </ul>
      -->
    </div>
  </nav>
