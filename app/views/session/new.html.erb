<section class="login">


  <div class="intro-text-panel"><h2>The Station intends to document the climbing scene at Rat Rock in Central Park from a social perspective.</h2> 

  </div>

  <div class="intro-text-panel">
    <h3>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    
    <%= form_tag('/login') do %>
      <br><%= label_tag :email %>
      <%= text_field_tag :email %>
      <br><%= label_tag :password %>
      <%= password_field_tag :password %>
      <br><br><%= submit_tag "Login" %>
    <% end %>
    
    <br>
    <%= link_to "Create an Account", new_user_path %>
    </h3>
  </div>

</section>


